{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "noEmit": true,
    "isolatedModules": true,
    "allowJs": true,
    "composite": true
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

