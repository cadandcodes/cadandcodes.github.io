{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "noEmit": true,
    "isolatedModules": true,
    "allowJs": true
  },
  "include": [
    "nuxt.config.ts",
    "pages/**/*.vue",
    "components/**/*.vue",
    "layouts/**/*.vue",
    "store/**/*.ts",
    "plugins/**/*.ts"
  ],
  "exclude": ["node_modules"]
}